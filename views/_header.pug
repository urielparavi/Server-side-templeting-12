header.header   
  nav.nav.nav--tours
    a.nav__el(href='/') All Tours 
  .header__logo   
    img(src='/img/logo-white.png' alt='Natours logo' )
  nav.nav.nav--user
    if user 
      a.nav__el.nav__el--logout Log out 
      a.nav__el(href='/me') 
        if user.photo
          img.nav__user-img(src=`/img/users/${user.photo}` alt=`${user.name}` )
        else 
          - const fNameInitial = user.name[1] //- We catch the first letter in first name => Avi Choen => A
          //- We catch the first letter in last name => Avi Choen => C
          - const lNameInitial = user.name.split(' ')[user.name.split(' ').length-1][1] 
          .avatar-circle 
            span.initials= `${fNameInitial}${lNameInitial}`    
        span= user.name.split(' ')[0]
    else 
      a.nav__el(href='/login') Log In
      a.nav__el.nav__el--cta(href='/signup') Sign Up